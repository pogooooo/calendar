generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// user account
model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // 사용자가 생성한 카테고리 목록
  createdCategories Category[] @relation("CreatedCategories")
  // 사용자가 참여하는 카테고리 목록
  participatingCategories Category[] @relation("CategoryParticipants")
  settings                UserSettings?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model UserSettings {
  id    String @id @default(cuid())
  theme String @default("celestial") // 테마 속성, 기본값은 'celestial'

  // User 모델과 1:1 관계를 설정합니다.
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique // userId를 unique로 설정하여 1:1 관계를 강제합니다.
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id         String  @id @default(cuid())
  name       String  // 이름
  color      String  // 색상 (e.g., "#FFFFFF")
  isDefault  Boolean @default(false) // 기본 카테고리 여부

  // 생성자 (User와 1:N 관계)
  creator    User    @relation("CreatedCategories", fields: [creatorId], references: [id])
  creatorId  String  // 생성자 ID

  // 참가자 (User와 N:M 관계)
  participants User[] @relation("CategoryParticipants")

  // 카테고리에 속한 할 일 목록
  todos Todo[]
}

// 할 일 모델
model Todo {
  id        String    @id @default(cuid())
  title     String    // 제목
  memo      String?   // 메모 (선택)
  startAt   DateTime? // 시작일 및 시간 (선택)
  endAt     DateTime? // 종료일 및 시간 (선택)
  isAllDay  Boolean   @default(false) // 하루 종일 일정 여부
  location  String?   // 장소 (선택)
  repeat    RepeatCycle @default(NONE) // 반복 주기 (선택)

  // 카테고리 (Category와 1:N 관계)
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  // 체크리스트 아이템 목록
  checklist ChecklistItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 체크리스트 아이템 모델
model ChecklistItem {
  id        String  @id @default(cuid())
  text      String  // 내용
  isChecked Boolean @default(false) // 체크 여부

  // 할 일 (Todo와 1:N 관계)
  todo   Todo   @relation(fields: [todoId], references: [id])
  todoId String
}

// 반복 주기
enum RepeatCycle {
  NONE
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}
